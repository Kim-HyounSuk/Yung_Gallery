{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit" // 추가: import 자동 정렬
  },
  "typescript.preferences.importModuleSpecifier": "non-relative", // 절대 경로 우선
  "typescript.preferences.includePackageJsonAutoImports": "on", // 자동 import 개선
  "typescript.suggest.autoImports": true, // 자동 import 활성화
  "emmet.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.eol": "\n",
  "files.associations": {
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"] // CVA와 Tailwind 연동
  ]
}
